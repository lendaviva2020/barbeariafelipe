{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "exclude": [
    "node_modules",
    "templates/**/*",
    "static/**/*",
    "**/*.html"
  ]
}

